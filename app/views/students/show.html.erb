
<%= link_to("<< Back to List", {:action => 'index'}) %>

<div>
  <h2>Show Student</h2>

   
   <table class="table table-striped">
    
    <tr>
      <th>&nbsp;</th>
      <td><%= image_tag @student.image.url(:medium) %></td>
    </tr>
    <tr >
      <th>Name</th>
      <td><%= @student.name %></td>
    </tr>
    
    <tr >
      <th>Position</th>
      <td><%= @student.position %></td>
    </tr>
    <tr >
      <th>Visible?</th>
      <td><%= @student.visible ? 'true' : 'false' %></td>
    </tr>
    <tr >
      <th>Father</th>
      <td><%= @student.father_name %></td>
    </tr>
    <tr >
    	<tr >
      <th>Mother</th>
      <td><%= @student.mother_name %></td>
    </tr>
    <tr >
      <th>DOB</th>
      <td><%= @student.dob %></td>
    </tr>
    
    <tr>
      <th>School Name</th>
      <td><%= @student.school.school_name if @student.school %></td>
    </tr>
    <tr>
      <th>Guardian Name</th>
      <td><%= @student.parent.parent_name if @student.parent %></td>
    </tr>
    <tr>
      <th>Classroom</th>
      <td><%= @student.classroom.classroom_name if @student.classroom %></td>
    </tr>
    <tr >
      <th>Created</th>
      <td><%= @student.created_at %></td>
    </tr>
    <tr >
      <th>Updated</th>
      <td><%= @student.updated_at %></td>
    </tr>
  </table>

</div>
