<% @page_title = "District List" %>

<%= link_to("<< Back to Menu", {:controller => 'district_list', :action => 'index'}) %>

<div >
  <h2>District</h2>

  <%= link_to('Add New District', {:action => 'new'}, :class => "btn btn-warning") %>

  <div><%= pluralize(@district_lists.size, 'district') %> found</div>

  <table  class="table table-striped">
    <tr>
      
      <th>Name</th>
      <th>Action</th>
      
    </tr>
    <% @district_lists.each do |district_list| %>
    <tr>
      
      <td><%= district_list.district_name %></td>
      
    
    <td >
        <%= link_to('Edit', {:action => 'edit', :id => district_list.id}, :class => "btn btn-success") %>
        <%= link_to('Delete', {:action => 'delete', :id => district_list.id}, :class => "btn btn-danger") %>
    </td>
   </tr>
    <% end %>
  </table>

</div>
