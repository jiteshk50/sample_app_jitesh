<% @page_title = "Subject List" %>

<%= link_to("<< Back to Menu", { :action => 'index'}) %>

<div >
  <h2>Subject</h2>

  <%= link_to('Add New Subject', {:action => 'new'}, :class => "btn btn-warning") %>

  <div><%= pluralize(@subjects.size, 'subject') %> found</div>

  <table class="table table-striped">
    <tr>
      
      <th>Subject Name</th>
      
      <th>Actions</th>
    </tr>
    <% @subjects.each do |subject| %>
    <tr>
      <td><%= subject.subject_name %></td>
      
      
      <td >
        <%= link_to('Edit', {:action => 'edit', :id => subject.id}, :class => "btn btn-success") %>
        <%= link_to('Delete', {:action => 'delete', :id => subject.id}, :class => "btn btn-danger") %>
      </td>
    </tr>
    <% end %>
  </table>

</div>
