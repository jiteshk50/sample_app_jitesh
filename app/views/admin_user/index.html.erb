<% @page_title = "Admin Users List" %>

<%= link_to("<< Back to Menu", {:controller => 'admin_user', :action => 'index'}) %>

<div >
  <h2>Admin Users</h2>

  <%= link_to('Add New Admin User', {:action => 'new'}, :class => "btn btn-warning") %>

  <div><%= pluralize(@admin_users.size, 'admin user') %> found</div>

  <table class="table table-striped">
    <tr>
      <th>Username</th>
      <th>Name</th>
      <th>Email</th>
      <th>Actions</th>
    </tr>
    <% @admin_users.each do |admin_user| %>
    <tr>
      <td><%= admin_user.username %></td>
      <td><%= admin_user.name %></td>
      <td><%= mail_to(admin_user.email) %></td>
      <td >
        <%= link_to('Edit', {:action => 'edit', :id => admin_user.id}, :class => "btn btn-success") %>
        <%= link_to('Delete', {:action => 'delete', :id => admin_user.id}, :class => "btn btn-danger") %>
      </td>
    </tr>
    <% end %>
  </table>

</div>
