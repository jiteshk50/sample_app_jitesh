<% @page_title = "Teacher List" %>

<%= link_to("<< Back to List", {:action => 'index'}) %>
<div >
  <h2>Teacher</h2>

  <%= link_to('Add New Teacher', {:action => 'new'}, :class => "btn btn-warning") %>

  <div><%= pluralize(@teachers.size, 'teacher') %> found</div>

  <table class="table table-striped">
    <tr>
      <th>Teacher Name</th>
      <th>Position</th>
      <th>Visible</th>
      <th>School</th>
      
      
      
      
      <th>Action</th>
    </tr>
    <% @teachers.each do |teacher| %>
    <tr>
      <td><%= teacher.teacher_name %></td>
      <td><%= teacher.position%></td>
      <td><%= teacher.visible %></td>
      <td><%= teacher.school.school_name if teacher.school %></td>
      
      
      <td >
        <%= link_to('view', {:action => 'show', :id => teacher.id}, :class => "btn btn-primary") %>
        <%= link_to('Edit', {:action => 'edit', :id => teacher.id}, :class => "btn btn-success") %>
        <%= link_to('Delete', {:action => 'delete', :id => teacher.id}, :class => "btn btn-danger") %>
      </td>
    </tr>
    <% end %>
  </table>

</div>
