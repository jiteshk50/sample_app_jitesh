

<div class="container">
	<%= form_tag(:action => "attempt_login") do %>
	<table class="table table-striped">
		<tr>
			<td><%= label_tag(:username) %></td>
			<td><%= text_field_tag(:username) %></td>
		</tr>
		<tr>
			<td><%= label_tag(:password) %></td>
			<td><%= password_field_tag(:password) %></td>
		</tr>
		<tr>
			<td>&nbsp;</td>
			<td><%= submit_tag("log in", :class => "btn btn-danger") %></td>
		</tr>

	</table>
	
	<% end %>
	<p>
		<%= link_to("Sign Up ", {:controller=>'admin_user', :action=>'new'}, :class => "btn btn-success" ) %>
	</p>
</div>