<% @page_title = "Block List" %>

<%= link_to("<< Back to Menu", {:controller => 'block_list', :action => 'index'}) %>

<div >
  <h2>Block</h2>

  <%= link_to('Add New Block', {:action => 'new'}, :class => "btn btn-warning") %>

  <div><%= pluralize(@block_lists.size, 'block') %> found</div>

  <table class="table table-striped">
    <tr>
      
      <th>Name</th>
      <th>Action</th>
      
    </tr>
    <% @block_lists.each do |block_list| %>
    <tr>
      
      <td><%= block_list.block_name %></td>
      
    
    <td >
        <%= link_to('Edit', {:action => 'edit', :id => block_list.id}, :class => "btn btn-success") %>
        <%= link_to('Delete', {:action => 'delete', :id => block_list.id}, :class => "btn btn-danger") %>
    </td>
   </tr>
    <% end %>
  </table>

</div>
